# ========================================
# JarvisV3 Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ========================================
# OpenAI API Configuration (REQUIRED)
# ========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI Model Selection
# Options: gpt-4o-mini-realtime-preview-2024-12-17, gpt-4o-realtime-preview-2024-12-17
OPENAI_MODEL=gpt-4o-mini-realtime-preview-2024-12-17

# ========================================
# Voice & Audio Settings
# ========================================
# Voice options: alloy, ash, ballad, coral, echo, sage, shimmer, verse
VOICE=echo

# Voice Activity Detection (VAD)
# Set to True to enable automatic speech detection, False to disable
VAD=True

# ========================================
# System & Context Settings
# ========================================
# Device identifier (used in function descriptions)
# Options: windows, mac, linux
DEVICE=windows

# Include date in messages sent to AI
INCLUDE_DATE=True

# Include time in messages sent to AI
INCLUDE_TIME=True

# ========================================
# Advanced Features
# ========================================
# Enable function calling (allows Jarvis to execute OS commands)
# WARNING: Only enable this if you trust the AI model and understand the security implications
FUNCTION_CALLING=False

# ========================================
# System Prompt / Initial Instructions
# ========================================
# Customize Jarvis's personality and behavior
# Leave empty for default behavior
INITIAL_PROMPT=You are Jarvis, a helpful AI assistant. Be concise and friendly.
